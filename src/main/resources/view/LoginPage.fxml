<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="456.0" prefWidth="727.0" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.LoginController">

    <!-- Username Field -->
    <Label layoutX="185.0" layoutY="131.0" prefHeight="22.0" prefWidth="86.0" text="Username :">
        <font>
            <Font name="System Bold" size="15.0" />
        </font></Label>
    <TextField fx:id="txtUsername" layoutX="305.0" layoutY="126.0" prefHeight="38.0" prefWidth="238.0" promptText="Enter Username or User ID" />

    <!-- Password Field -->
    <Label layoutX="185.0" layoutY="191.0" prefHeight="22.0" prefWidth="86.0" text="Password :">
        <font>
            <Font name="System Bold" size="15.0" />
        </font></Label>
    <PasswordField fx:id="txtPassword" layoutX="305.0" layoutY="186.0" prefHeight="38.0" prefWidth="238.0" promptText="Enter Password" />

    <!-- Login Button -->
    <Button fx:id="btnLogin" layoutX="245.0" layoutY="269.0" onAction="#handleLoginAction" prefHeight="52.0" prefWidth="238.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 20;" text="Login">
        <font>
            <Font name="System Bold" size="25.0" />
        </font></Button>
    <Label layoutX="283.0" layoutY="38.0" prefHeight="50.0" prefWidth="162.0" text="- Login - ">
        <font>
            <Font name="System Bold" size="34.0" />
        </font>
    </Label>
    <Label fx:id="LblLogin" layoutX="594.0" layoutY="399.0" prefHeight="38.0" prefWidth="111.0" style="-fx-border-color: black;">
        <font>
            <Font name="System Bold Italic" size="16.0" />
        </font>
    </Label>

</AnchorPane>
