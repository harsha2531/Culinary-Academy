            <Font name="System Bold" size="14.0" />
        </font></Button>
    <Button fx:id="btnDelete" layoutX="751.0" layoutY="251.0" onAction="#btnDeleteOnAction" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete">
        <font>
            <Font name="System Bold" size="14.0" />
        </font></Button>
    <Button fx:id="btnClear" layoutX="751.0" layoutY="313.0" onAction="#btnClearOnAction" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #607D8B; -fx-text-fill: white;" text="Clear">
        <font>
            <Font name="System Bold" size="14.0" />
        </font></Button>

    <!-- Table View for Student Course Information -->
    <TableView fx:id="tblStudentCourse" layoutX="28.0" layoutY="377.0" prefHeight="200.0" prefWidth="938.0">
        <columns>
            <TableColumn fx:id="colStudentId" prefWidth="279.0" text="Student ID" />
            <TableColumn fx:id="colCourseId" prefWidth="288.0" text="Course ID" />
            <TableColumn fx:id="colDate" prefWidth="190.0" text="Date" />
