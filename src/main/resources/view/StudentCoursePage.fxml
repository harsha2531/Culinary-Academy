    <!-- Buttons for CRUD Operations -->
    <Button fx:id="btnAdd" layoutX="751.0" layoutY="128.0" onAction="#btnAddOnAction" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add">
        <font>
            <Font name="System Bold" size="14.0" />
        </font></Button>
    <Button fx:id="btnUpdate" layoutX="751.0" layoutY="192.0" onAction="#btnUpdateOnAction" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Update">
